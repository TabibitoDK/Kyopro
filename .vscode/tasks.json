{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "--std=gnu++23",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-Wfloat-equal",
                "-Wlogical-op",
                "-O2",
                "-D_GLIBCXX_DEBUG",
                "-fsanitize=undefined,address",
                "-g",
                "${file}"
            ],
            "group": "build",
            "detail": "C++ のコンパイル"
        }
    ]
}